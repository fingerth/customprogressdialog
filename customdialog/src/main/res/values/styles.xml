<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="FingerthCustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FTransDialog" parent="FingerthCustomDialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DarkDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="WhiteDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>